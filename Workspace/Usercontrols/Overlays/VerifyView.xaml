<UserControl x:Class="Galaxy_Swapper_v2.Workspace.Usercontrols.Overlays.VerifyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galaxy_Swapper_v2.Workspace.Usercontrols.Overlays"
             mc:Ignorable="d" 
             Height="450" 
             Width="800"
             >
    <Border CornerRadius="10" Background="#090B0E" BorderBrush="#050608" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>
        <Grid>
            <TextBlock x:Name="Header" Text="Verification In progress!" TextAlignment="Center" VerticalAlignment="Top" Foreground="#EFEFF0" FontWeight="SemiBold" FontSize="22" Margin="0,38,0,0"/>
            <TextBlock x:Name="Description" Text="Sit back and relax while we verify your game files. This may take a few minutes." TextAlignment="Center" VerticalAlignment="Top" Foreground="#D3D3D6" FontWeight="Light" FontSize="13" Margin="0,74,0,0"/>
            <TextBlock x:Name="OutputBlock" TextWrapping="Wrap" TextAlignment="Left" Foreground="#EFEFF0" Margin="24, 105, 24, 0"/>
        </Grid>
    </Border>
</UserControl>